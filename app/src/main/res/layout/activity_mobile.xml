<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huanpet.huanpet.view.activity.MobileActivity">

    <ImageView
        android:id="@+id/imageMobile_headportrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_launcher_background"
        android:foregroundGravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageMobile_headportrait"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:id="@+id/textMobile_name"
        android:text="XXX" />

    <EditText
        android:id="@+id/editMobile_phonenumber"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageMobile_headportrait"
        android:layout_marginTop="50dp"
        android:theme="@style/MyEditText"
        android:hint="请输入手机号码" />

    <Button
        android:id="@+id/btnMobile_VerificationCode"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editMobile_phonenumber"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:textColor="#858588"
        android:textSize="18sp"
        android:background="@color/colorbtn_background"
        android:text="获取验证码" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/editMobile_Verificationcode"
        android:theme="@style/MyEditText"
        android:hint="请输入验证码"
        android:layout_below="@id/editMobile_phonenumber"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/MyEditText"
        android:id="@+id/editMobile_username"
        android:layout_below="@id/editMobile_Verificationcode"
        android:hint="请输入用户名"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/MyEditText"
        android:id="@+id/editMobile_password"
        android:layout_below="@+id/editMobile_username"
        android:hint="请输入六位数字密码"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMobile_password"
        android:background="@color/colorbtn_mobile"
        android:text="确定"
        android:textSize="15sp"
        android:layout_marginTop="34dp" />


</RelativeLayout>
