<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huanpet.huanpet.view.activity.RegistActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="欢迎您加入宠物寄养"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#767676"
        android:id="@+id/textView4" />

    <EditText
        android:id="@+id/editRegist_phonenumber"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="17dp"
        android:hint="请输入手机号"
        android:theme="@style/MyEditText" />

    <Button
        android:id="@+id/btnRegist_VerificationCode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editRegist_phonenumber"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/text_view_border2"
        android:textStyle="bold"
        android:textColor="#FFD600"
        android:textSize="18sp"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/editRegist_Verificationcode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editRegist_phonenumber"
        android:layout_marginTop="25dp"
        android:hint="请输入验证码"
        android:theme="@style/MyEditText" />

    <EditText
        android:id="@+id/editRegist_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editRegist_phonenumber"
        android:layout_marginTop="17dp"
        android:hint="请输入用户名"
        android:theme="@style/MyEditText" />

    <EditText
        android:id="@+id/editRegist_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editRegist_Verificationcode"
        android:layout_marginTop="19dp"
        android:hint="请输入六位数字密码"
        android:theme="@style/MyEditText" />

    <Button
        android:id="@+id/button_regist"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="注册"
        android:background="@drawable/buttonyuanjiao"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/editRegist_password"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_regist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="使用第三方账号登录"
        android:textColor="#c5c5c5" />

    <ImageView
        android:id="@+id/imgRegist_QQRegist"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/imgRegist_weixinRegist"
        android:background="@mipmap/login_qq" />

    <ImageView
        android:id="@+id/imgRegist_weixinRegist"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView"
        android:layout_marginTop="28dp"
        android:background="@mipmap/login_weixin" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRegist_weixinRegist"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:text="微信" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgRegist_QQRegist"
        android:layout_toLeftOf="@+id/btnRegist_VerificationCode"
        android:layout_toStartOf="@+id/btnRegist_VerificationCode"
        android:text="手机QQ" />


</RelativeLayout>
