<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.huanpet.huanpet.view.activity.pet.ImmuneConditionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:id="@+id/linlayout_main"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_turnbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:text="以前是否免疫过"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_Lastimmunetime2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/enter" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/text_Lastimmunetime"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linlayout_main"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:text="上次免疫时间" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:id="@+id/text_Lastimmunetime2"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_Lastimmunetime"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:text="上次免疫时间" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_Lastimmunetime2"
        android:background="#FFFFFF"
        android:text="请如实选择宠物已免疫病毒类型"
        android:id="@+id/textView6" />

    <Button
        android:id="@+id/btn_quanwenbingdu"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/btn_kuangquanbingbingdu"
        android:layout_toStartOf="@+id/btn_kuangquanbingbingdu"
        android:background="@drawable/bt_shape"
        android:drawableLeft="@mipmap/choose_icon_on"
        android:text="犬瘟病毒"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_quanxixiaobingdu"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_shape"
        android:drawableLeft="@mipmap/exclamation"
        android:layout_alignBaseline="@+id/btn_quanxianbingdu"
        android:layout_alignBottom="@+id/btn_quanxianbingdu"
        android:layout_alignLeft="@+id/btn_kuangquanbingbingdu"
        android:layout_alignStart="@+id/btn_kuangquanbingbingdu"
        android:text="犬细小病毒" />

    <Button
        android:id="@+id/btn_quanxianbingdu"
        android:layout_width="110dp"
        android:drawableLeft="@mipmap/exclamation"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_quanwenbingdu"
        android:layout_alignStart="@+id/btn_quanwenbingdu"
        android:layout_below="@+id/btn_kuangquanbingbingdu"
        android:layout_marginTop="26dp"
        android:background="@drawable/bt_shape"
        android:text="犬腺病毒" />

    <Button
        android:id="@+id/btn_kuangquanbingbingdu"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/exclamation"
        android:layout_alignBaseline="@+id/btn_quanwenbingdu"
        android:layout_alignBottom="@+id/btn_quanwenbingdu"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:background="@drawable/bt_shape"
        android:text="狂犬病病毒" />



</RelativeLayout>
