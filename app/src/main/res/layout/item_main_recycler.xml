<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#f6f6f6"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:background="#ffffff">
    <com.huanpet.huanpet.untils.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/dir4"
        android:id="@+id/image_item_main"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="22222222222222"
            android:id="@+id/textName_item_main"/>
        <RatingBar
            android:id="@+id/ratingbar_item_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="5"
            android:clickable="false"
            style="@style/foodRatingBar"
            android:progressTint="#FFD500"
             >
        </RatingBar>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3333333333333333333333"
            android:id="@+id/textID_item_main"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFAC8F"
            android:text="$20.00"
            android:id="@+id/textPics_item_main" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离"
            android:id="@+id/textjvli_item_main"/>
    </LinearLayout>

</LinearLayout>
</LinearLayout>